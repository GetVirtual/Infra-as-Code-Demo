{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "properties": {
        "mode": "Complete"
    },
    "parameters": {

    },
    "variables": {
        "site1vnetPrefix": "10.10.0.0/16",
        "site1vnetSubnet2Name": "subnet2",
        "site1vnetSubnet2Prefix": "10.10.2.0/24"
    },
    "resources": [
        {
            "name": "site1vnet",
            "type": "Microsoft.Network/virtualNetworks",
            "location": "[resourceGroup().location]",
            "apiVersion": "2018-10-01",
            "dependsOn": [],
            "tags": {
                "displayName": "site1vnet"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[variables('site1vnetPrefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('site1vnetSubnet2Name')]",
                        "properties": {
                            "addressPrefix": "[variables('site1vnetSubnet2Prefix')]"
                        }
                    }
                ]
            }
        }
        
        
    ]
}